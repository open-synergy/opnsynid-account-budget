<openerp>
    <data>

        <record id="budget_analysis_view_search" model="ir.ui.view">
            <field name="name">budget.analysis search</field>
            <field name="model">budget.analysis</field>
            <field name="arch" type="xml">
                <search>
                    <field name="account_id"/>
                    <field name="type_id"/>
                    <field name="version_id"/>
                    <field name="period_id"/>
                    <field name="state"/>
                    <filter name="dom_empty" string="Empty" domain="[('id','=',0)]"/>
                    <!-- <group name="filter_type" string="Budget Type">
                        <filter name="filter_revenue" string="Revenue" domain="[('type_id.id','=',1)]"/>
                        <filter name="filter_cogs_hr" string="COGS HR" domain="[('type_id.id','=',2)]"/>
                        <filter name="filter_cogs_purchase" string="COGS Purchase" domain="[('type_id.id','=',3)]"/>
                        <filter name="filter_overhead" string="Overhead" domain="[('type_id.id','=',4)]"/>
                        <filter name="filter_support" string="Support" domain="[('type_id.id','=',5)]"/>
                        <filter name="filter_marketing" string="Marketing" domain="[('type_id.id','=',6)]"/>
                    </group> -->
                    <group name="filter_state" string="State">
                        <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]"/>
                        <filter name="filter_confirm" string="Waiting for Approval" domain="[('state','=','confirm')]"/>
                        <filter name="filter_valid" string="Waiting for Payment" domain="[('state','=','valid')]"/>
                        <filter name="filter_cancel" string="Cancelled" domain="[('state','=','cancel')]"/>
                    </group>
                    <group name="row_grp" string="Row Grouping">
                        <filter name="row_grp_company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <filter name="row_grp_account" string="Account" context="{'group_by':'account_id'}"/>
                        <filter name="row_grp_type" string="Type" context="{'group_by':'type_id'}"/>
                        <filter name="row_grp_version" string="Version" context="{'group_by':'version_id'}"/>
                        <filter name="row_grp_period" string="Period" context="{'group_by':'period_id'}"/>
                    </group>
                    <group name="col_grp" string="Colomn Grouping">
                        <filter name="col_grp_company" string="Company" context="{'col_group_by':'company_id'}" groups="base.group_multi_company"/>
                        <filter name="col_grp_account" string="Account" context="{'col_group_by':'account_id'}"/>
                        <filter name="col_grp_type" string="Type" context="{'col_group_by':'type_id'}"/>
                        <filter name="col_grp_version" string="Version" context="{'col_group_by':'version_id'}"/>
                        <filter name="col_grp_period" string="Period" context="{'col_group_by':'period_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="budget_analysis_view_graph" model="ir.ui.view">
            <field name="name">budget.analysis graph</field>
            <field name="model">budget.analysis</field>
            <field name="arch" type="xml">
                <graph type="pivot">
                    <field name="amount_plan" type="measure"/>
                    <field name="amount_realized" type="measure"/>
                    <field name="amount_diff" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="budget_analysis_action" model="ir.actions.act_window">
            <field name="name">Budget Analysis</field>
            <field name="res_model">budget.analysis</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph</field>
            <field name="context">{'search_default_dom_empty':1}</field>
            <field name="view_id" ref="budget_analysis_view_graph"/>
            <field name="search_view_id" ref="budget_analysis_view_search"/>
        </record>

        <menuitem
            id="budget_analysis_menu"
            name="Budget Analysis"
            parent="account.menu_finance_reporting"
            action="budget_analysis_action"
            sequence="15"
        />

    </data>
</openerp>
