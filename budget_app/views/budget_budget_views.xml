<openerp>
<data>
<record id="budget_budget_view_search" model="ir.ui.view">
    <field name="name">budget.budget search</field>
    <field name="model">budget.budget</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="type_id"/>
            <field name="period_id"/>
            <field name="user_id"/>
            <field name="state"/>
            <filter name="needs_review" string="Needs my Review"
                    domain="[('reviewer_ids','in',uid), ('state', 'not in', ['done', 'cancel'])]"
                    help="Need my review"/>
            <group name="dom_state" string="State">
                <filter name="dom_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="dom_confirm" string="Waiting for Approval" domain="[('state','=','confirm')]"/>
                <filter name="dom_valid" string="Approved" domain="[('state','=','valid')]"/>
                <filter name="dom_cancel" string="Cancel" domain="[('state','=','cancel')]"/>
            </group>
            <group name="groupby" string="Group By..">
                <filter name="grp_company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                <filter name="grp_type" string="Type" context="{'group_by':'type_id'}"/>
                <filter name="grp_version" string="Version" context="{'group_by':'version_id'}"/>
                <filter name="grp_period" string="Period" context="{'group_by':'period_id'}"/>
                <filter name="grp_responsible" string="Responsible" context="{'group_by':'user_id'}"/>
            </group>
        </search>
    </field>
</record>

<record id="budget_budget_view_tree" model="ir.ui.view">
    <field name="name">budget.budget tree</field>
    <field name="model">budget.budget</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="type_id"/>
            <field name="period_id"/>
            <field name="user_id"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="budget_budget_view_form" model="ir.ui.view">
    <field name="name">budget.budget form</field>
    <field name="model">budget.budget</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}" confirm="Confirm budget. Are you sure?"/>
                <button name="request_validation"
                    string="Request Validation"
                    attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                    class="oe_highlight"
                    type="object"/>
                <button name="restart_validation"
                    string="Restart Validation"
                    attrs="{'invisible': ['|','|','|',('review_ids', '=', []),('rejected','=',False),('state','not in',['confirm']),('restart_approval_ok','=',False)]}"
                    type="object"/>
                <button name="%(base_print_policy.base_print_document_action)d" string="Print" type="action" icon="gtk-print"/>
                <button name="%(base_cancel_reason.base_cancel_reason_wizard_action)d" type="action" string="Cancel" attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}" confirm="Cancel budget. Are you sure?"/>
                <button name="action_restart" type="object" string="Restart" attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}" confirm="Restart budget. Are you sure?"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,open"/>
            </header>
            <field name="need_validation" invisible="1"/>
            <field name="validated" invisible="1"/>
            <field name="rejected" invisible="1"/>
            <div class="alert alert-warning"
                 attrs="{'invisible': ['|', '|', '|',
                 ('validated', '=', True), ('state', 'not in', ['confirm']),
                 ('rejected', '=', True), ('review_ids', '=', [])]}"
                 style="margin-bottom:0px;">
                <p><i class="fa fa-info-circle"/>This budget needs to be
                    validated.
                    <button name="validate_tier"
                        string="Validate"
                        attrs="{'invisible': [('review_ids', '=', [])]}"
                        type="object"
                        class="oe_inline oe_button btn-success"
                        icon="terp-check"/>
                    <button name="reject_tier"
                        string="Reject"
                        type="object"
                        class="btn-icon btn-danger"
                        icon="terp-gtk-stop"/>
                </p>
            </div>
            <div class="alert alert-success"
                 attrs="{'invisible': ['|', '|', ('validated', '!=', True), ('state', 'not in', ['confirm']), ('review_ids', '=', [])]}"
                 style="margin-bottom:0px;">
                <p><i class="fa fa-thumbs-up"/> Operation has been <b>validated</b>!</p>
            </div>
            <div class="alert alert-danger"
                 attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'not in', ['confirm']), ('review_ids', '=', [])]}"
                 style="margin-bottom:0px;">
                <p><i class="fa fa-thumbs-down"/> Operation has been <b>rejected</b>.</p>
            </div>
            <sheet>
                <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                            <label for="cancel_reason_id" string="Cancellation reason:"/>
                            <field name="cancel_reason_id" class="oe_inline"/>
                        </h2>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="type_id"/>
                        <field name="allowed_account_ids" widget="many2many_tags" invisible="1"/>
                        <field name="user_id"/>
                    </group>
                    <group name="group_1_2">
                        <field name="version_id"/>
                        <field name="period_id"/>
                    </group>
                </group>
                <notebook colspan="4">
                    <page name="detail" string="Budget Detail">
                        <group name="detail_1" colspan="4" col="2" string="Items">
                            <field name="detail_ids" colspan="2" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="account_id"/>
                                    <field name="product_id"/>
                                    <field name="amount_unit"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="amount_subtotal"/>
                                </tree>
                                <form>
                                    <group name="detail_2" colspan="4" col="2">
                                        <group name="detail_2_1" colspan="1" col="2">
                                            <field name="account_id" domain="[('id','in',parent.allowed_account_ids[0][2])]"/>
                                            <field name="product_id"/>
                                            <field name="name"/>
                                        </group>
                                        <group name="detail_2_2" colspan="1" col="2">
                                            <field name="amount_unit"/>
                                            <field name="quantity"/>
                                            <field name="allowed_uom_ids" widget="many2many_tags" invisible="1"/>
                                            <field name="uom_id" domain="[('id','in',allowed_uom_ids[0][2])]"/>
                                            <field name="amount_subtotal"/>
                                        </group>
                                    </group>
                                    <notebook/>
                                </form>
                            </field>
                        </group>
                        <group name="detail_1" colspan="4" col="2" string="Summary">
                            <field name="detail_summary_ids" colspan="2" nolabel="1">
                                <tree>
                                    <field name="account_id"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </group>
                        <group name="detail_3" colspan="4" col="2">
                            <group name="detail_3_1" colspan="1" col="2">
                                <field name="amount_planned"/>
                                <field name="amount_realized"/>
                                <field name="amount_diff"/>
                            </group>
                            <group name="detail_3_1" colspan="1" col="2">
                            </group>
                        </group>
                    </page>
                    <page name="account" string="Accounts">
                        <field name="detail_account_ids">
                            <tree>
                                <field name="account_id"/>
                            </tree>
                        </field>
                    </page>
                    <page name="move_line" string="Realization">
                        <group name="move_line_1" colspan="4" col="2" string="Items">
                            <field name="move_line_ids" nolabel="1">
                                <tree>
                                    <field name="move_id"/>
                                    <field name="account_id"/>
                                    <field name="journal_id"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </group>
                        <group name="move_line_2" colspan="4" col="2" string="Summary">
                            <field name="move_line_summary_ids" nolabel="1">
                                <tree>
                                    <field name="account_id"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="summary" string="Summary">
                        <group name="summary_1" colspan="4" col="2">
                            <field name="summary_ids" nolabel="1">
                                <tree>
                                    <field name="account_id"/>
                                    <field name="amount_planned"/>
                                    <field name="amount_realized"/>
                                    <field name="amount_diff"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Reviews" name="tier_validation">
                        <group name="tier_validation_1" colspan="4" col="2">
                            <field name="definition_id"/>
                            <field name="reviewer_partner_ids" widget="many2many_tags"/>
                        </group>
                        <group name="tier_validation_2" colspan="4" col="2">
                            <field name="review_ids" readonly="1"/>
                        </group>
                    </page>
                    <page name="note" string="Notes">
                        <field name="note"/>
                    </page>
                    <page name="policy" string="Policies"  groups="base.group_system">
                        <group name="policy_1" colspan="4" col="2">
                            <field name="confirm_ok"/>
                            <field name="restart_approval_ok"/>
                            <field name="approve_ok"/>
                            <field name="cancel_ok"/>
                            <field name="restart_ok"/>
                        </group>
                    </page>
                    <page name="log" string="Logs"  groups="base.group_system">
                        <group name="group_5" colspan="4" col="3">
                            <group name="group_log_1" colspan="4" col="3">
                                <field name="confirm_date" string="Confirmation"/>
                                <field name="confirm_user_id" nolabel="1"/>
                                <field name="approve_date" string="Approval"/>
                                <field name="approve_user_id" nolabel="1"/>
                                <field name="cancel_date" string="Cancellation"/>
                                <field name="cancel_user_id" nolabel="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<record id="budget_budget_action" model="ir.actions.act_window">
    <field name="name">Budgets</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">budget.budget</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
    id="budget_budget_menu"
    name="Budgets"
    parent="budget_root_menu"
    action="budget_budget_action"
    sequence="1"
    />

</data>
</openerp>
